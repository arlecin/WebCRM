@{
    ViewData["Title"] = "Изменить клиента";
}
@model Client
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="/Client/Update">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <input type="text" hidden value="@Model.Id" name="Id" />
                <div>
                    <input type="text" class="form-control" placeholder="ИНН" asp-for="Inn" /><br />
                    <span asp-validation-for="Inn"></span>
                </div>
                <div>
                    <input type="text" class="form-control" placeholder="Название" asp-for="Name" /><br />
                    <span asp-validation-for="Name"></span>
                </div>
                <label class="col-form-label">Тип клиента:</label>
                <select class="custom-select" name="Type">
                    <option selected value="1">Юридическое лицо</option>
                    <option value="2">Физическое лицо</option>
                </select>
                <input type="submit" value="Сохранить" class="btn btn-primary my-sm-2" />
                <a asp-action="Index" class="btn btn-primary">Отмена</a>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
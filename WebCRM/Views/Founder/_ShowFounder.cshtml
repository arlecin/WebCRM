@model List<Founder>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 my-sm-1">
            <h2>@item.Inn</h2>
            <p>@item.Syrname</p>
            <p>@item.Name</p>
            <p>@item.Patronymic</p>
            <p>Дата создания:</p>
            <p>@item.DateCreate</p>
            <p>Дата обновления:</p>
            <p>@item.DateUpdate</p>
            <div class="row">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Изменить</a>
                        </div>
                        <div class="col-md-4">
                            <form method="post" action="/Founder/Delete">
                                <input hidden value="@item.Id" name="id" />
                                <input type="submit" value="Удалить" class="btn btn-primary" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>